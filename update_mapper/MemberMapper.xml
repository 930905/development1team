<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="org.zerock.mapper.MemberMapper">

	<!-- 
		SELECT * FROM member WHERE memberid = 'aaa'
	 -->	
	<select id="read" resultType="org.zerock.domain.MemberVO">
		SELECT * FROM member WHERE memberid = #{memberid}
	</select>
	
	<!-- 
		UPDATE member SET email='kim1234@naver.com', name='김유진', password='1234' where memberid = 'aaa'; 
	-->
	<update id="update">
		UPDATE member SET email=#{email}, name=#{name}, password=#{password} where memberid = #{memberid}
	</update>
	
</mapper>
